.sidebar
  .sidebar__header
    .sidebar__header__box
      .sidebar__header__box__username
        =current_user.name
      
      .sidebar__header__box__menu
      
        .sidebar__header__box__menu__newgroup
          = link_to new_group_path do
            = icon('fas', 'edit')
        .sidebar__header__box__menu__edituser
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  .sidebar__group
    - current_user.groups.each do |group|
      .sidebar__group__list
        = link_to group_messages_path(group) do
          .sidebar__group__list__name
            = group.name
          .sidebar__group__list__message
            = group.show_last_message